{% extends 'ruolo/index.html.twig' %}

{% block pagina_contenuto %}
<div class="container-fluid">
  <table class="table table-striped table-bordered ">
    <caption>Lista docenti appartenenti allo staff:</caption>
    <thead>
      <tr>
        <th>{{ 'label.cognome'|trans }}</th>
        <th>{{ 'label.nome'|trans }}</th>
        <th>{{ 'label.username'|trans }}</th>
        <th>{{ 'label.sede'|trans }}</th>
        <th>{{ 'label.action'|trans }}</th>
      </tr>
    </thead>
    <tbody>
    {% for s in staff %}
      <tr>
        <td>{{ s.cognome }}</td>
        <td>{{ s.nome }}</td>
        <td>{{ s.username }}</td>
        <td>{% if s.sede %}{{ s.sede.citta }}{% else %}Tutte{% endif %}</td>
        <td>
          <a class="btn btn-primary btn-xs" href="{{ path('ruolo_staff_delete', {'id': s.id}) }}" role="button"><span class="glyphicon glyphicon-remove gs-mr-2" aria-hidden="true"></span>{{ 'label.delete'|trans }}</a>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
  {% include('include/form.html.twig') %}
</div>
{% endblock %}
