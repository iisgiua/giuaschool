{% extends 'alunni/index.html.twig' %}

{% block pagina_contenuto %}
<div class="container-fluid">
  <table class="table table-striped table-bordered ">
    <caption>Lista cambi classe:</caption>
    <thead>
      <tr>
        <th>{{ 'label.alunno'|trans }}</th>
        <th>{{ 'label.data_inizio'|trans }}</th>
        <th>{{ 'label.data_fine'|trans }}</th>
        <th>{{ 'label.classe'|trans }}</th>
        <th>{{ 'label.note'|trans }}</th>
        <th>{{ 'label.action'|trans }}</th>
      </tr>
    </thead>
    <tbody>
    {% for c in lista %}
      <tr>
        <td>{{ c.cognome }} {{ c.nome }} ({{ c.dataNascita|date('d/m/Y') }})</td>
        <td>{{ c.inizio|date('d/m/Y') }}</td>
        <td>{{ c.fine|date('d/m/Y') }}</td>
        <td>{{ c.anno~' '~c.sezione }}</td>
        <td>{{ c.note }}</td>
        <td>
          <a class="btn btn-primary btn-xs" href="{{ path('alunni_classe_delete', {'id': c.id}) }}" role="button"><span class="glyphicon glyphicon-remove gs-mr-2" aria-hidden="true"></span>{{ 'label.delete'|trans }}</a>
          <a class="btn btn-primary btn-xs" href="{{ path('alunni_classe_edit', {'id': c.id}) }}" role="button"><span class="glyphicon glyphicon-edit gs-mr-2" aria-hidden="true"></span>{{ 'label.edit'|trans }}</a>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
