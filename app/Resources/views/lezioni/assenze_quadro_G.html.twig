{% extends 'lezioni/index.html.twig' %}

{% block pagina_contenuto %}
<div class="container-fluid">
  {% include 'ruolo_docente/menu_lezioni.html.twig' %}
  {% if not cattedra and not classe %}
  <h1 class="text-center gs-h1 gs-mt-2">{{ 'title.lezioni_assenze'|trans }}</h1>
  <div class="alert alert-warning" role="alert">
    <strong class="gs-big">{{ 'message.cattedra_mancante'|trans }}</strong>
  </div>
  {% else %}
  <h1 class="text-center gs-h1 gs-mt-2 gs-mb-0">{{ 'title.lezioni_assenze'|trans }} {{ classe.anno~'Âª '~classe.sezione }}</h1>
  <h2 class="text-center gs-h2 gs-mt-0 gs-mb-5"><em>{{ info.materia }}{{ info.alunno ? ' ('~info.alunno.cognome~' '~info.alunno.nome~')' }}</em></h2>
    {% if errore %}
  <div class="row gs-mb-5">
    <div class="col-sm-12">
      <strong class="gs-big">Data:</strong>
      <button class="btn btn-primary" id="gs-button-date" title="Cambia data"><span class="glyphicon glyphicon-calendar gs-mr-3"></span>{{ info.data_label }}</button>
    </div>
  </div>
  <div class="alert alert-warning" role="alert">
    <strong class="gs-big">{{ errore }}</strong>
  </div>
    {% else %}
  <div class="row gs-mb-1">
    <div class="col-sm-5">
      <strong class="gs-big">Data:</strong>
      <button class="btn btn-primary" id="gs-button-date" title="Cambia data"><span class="glyphicon glyphicon-calendar gs-mr-3"></span>{{ info.data_label }}</button>
    </div>
    <div class="col-sm-2 text-center">
      {% if dati[data].pulsante_appello is defined %}
      <a class="btn btn-success" href="{{ dati[data].pulsante_appello }}" role="button" title="Esegui la procedura dell'appello"><span class="glyphicon glyphicon-hand-up gs-mr-3"></span>Appello</a>
      {% endif %}
    </div>
    <div class="col-sm-5 text-right">
      <strong class="gs-big">Vista:</strong>
      <a class="btn btn-default btn-sm active" href="{{ path('lezioni_assenze_quadro', {'cattedra': (cattedra ? cattedra.id : 0), 'classe': (classe ? classe.id : 0), 'data': data, 'vista': 'G'}) }}" role="button" title="Visualizza le assenze del giorno"><span class="glyphicon glyphicon-stop"></span></a>
      <a class="btn btn-default btn-sm" href="{{ path('lezioni_assenze_quadro', {'cattedra': (cattedra ? cattedra.id : 0), 'classe': (classe ? classe.id : 0), 'data': data, 'vista': 'S'}) }}" role="button" title="Visualizza le assenze della settimana"><span class="glyphicon glyphicon-th-large"></span></a>
      <a class="btn btn-default btn-sm" href="{{ path('lezioni_assenze_quadro', {'cattedra': (cattedra ? cattedra.id : 0), 'classe': (classe ? classe.id : 0), 'data': data, 'vista': 'M'}) }}" role="button" title="Visualizza le assenze del mese"><span class="glyphicon glyphicon-th"></span></a>
    </div>
  </div>
  <table class="table table-bordered table-hover table-striped">
    <thead class="bg-success">
      <tr>
        <th>#</th>
        <th>Alunno</th>
        <th>Situazione</th>
        <th>Giustificazioni</th>
        <th>Azioni</th>
      </tr>
    </thead>
    <tbody>
      {% for k,v in dati[data].lista %}
      <tr>
        <td>{{ loop.index }}</td>
        <td>
          <strong>{{ v.cognome }} {{ v.nome }} ({{ v.dataNascita|date('d/m/Y') }})</strong>
        {% if v.bes != 'N' %}
          <button type="button" class="btn btn-xs btn-default gs-ml-1" title="Informazioni sull'alunno" data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="{{ ('label.bes_'~v.bes)|trans }}"><span class="glyphicon glyphicon-info-sign"></span></button>
        {% endif %}
        {% if v.note is not empty %}
          <button type="button" class="btn btn-xs btn-default gs-ml-1" title="Note aggiuntive" data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="{{ v.note }}"><span class="glyphicon glyphicon-info-sign"></span></button>
        {% endif %}
        {% if v.autorizzaEntrata is not empty %}
          <button type="button" class="btn btn-xs btn-default gs-ml-1" title="Autorizzazione all'entrata in ritardo" data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="{{ v.autorizzaEntrata }}"><span class="glyphicon glyphicon-time"></span></button>
        {% endif %}
        {% if v.autorizzaUscita is not empty %}
          <button type="button" class="btn btn-xs btn-default gs-ml-1" title="Autorizzazione all'uscita anticipata" data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="{{ v.autorizzaUscita }}"><span class="glyphicon glyphicon-time"></span></button>
        {% endif %}
        </td>
        <td>
          {{ v.id_assenza ? '<span class="label label-default">Assente</span>' }}
        {% if v.id_entrata %}
          <span class="label label-default gs-mr-1"{% if v.note_entrata %} title="Note sul ritardo" data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="{{ v.note_entrata }}"{% endif %}>Ritardo ({{ v.ora_entrata|date('H:i') }})
          {% if v.note_entrata %} <span class="glyphicon glyphicon-info-sign"></span>{% endif %}
          </span>
        {% endif %}
        {% if v.id_uscita %}
          <span class="label label-default"{% if v.note_uscita %} title="Note sull'uscita anticipata" data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="{{ v.note_uscita }}"{% endif %}>Uscita ({{ v.ora_uscita|date('H:i') }})
          {% if v.note_uscita %} <span class="glyphicon glyphicon-info-sign"></span>{% endif %}
          </span>
        {% endif %}
        </td>
        <td>
        {% if v.giustifica_assenze > 0 %}
          <span class="badge">{{ v.giustifica_assenze }}</span> assenz{{ v.giustifica_assenze > 1 ? 'e' : 'a' }}
        {% endif %}
        {% if v.giustifica_ritardi > 0 %}
          <span class="badge{{ v.giustifica_assenze > 0 ? ' gs-ml-3' }}">{{ v.giustifica_ritardi }}</span> ritard{{ v.giustifica_ritardi > 1 ? 'i' : 'o' }}
        {% endif %}
        </td>
        <td>
        {% if v.pulsante_presenza is defined %}
          <a class="btn btn-success btn-xs" href="{{ v.pulsante_presenza }}" role="button" title="Segna la presenza dell'alunno">P</a>
        {% endif %}
        {% if v.pulsante_assenza is defined %}
          <a class="btn btn-danger btn-xs" href="{{ v.pulsante_assenza }}" role="button" title="Segna l'assenza dell'alunno">A</a>
        {% endif %}
        {% if v.pulsante_entrata is defined %}
          <a class="btn btn-warning btn-xs" href="{{ v.pulsante_entrata }}" role="button" title="Segna il ritardo dell'alunno">R</a>
        {% endif %}
        {% if v.pulsante_uscita is defined %}
          <a class="btn btn-warning btn-xs" href="{{ v.pulsante_uscita }}" role="button" title="Segna l'uscita anticipata dell'alunno">U</a>
        {% endif %}
        {% if v.pulsante_giustifica is defined %}
          <a class="btn btn-primary btn-xs" href="{{ v.pulsante_giustifica }}" role="button" title="Giustifica le assenze e i ritardi">G</a>
        {% endif %}
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
    {% endif %}
  {% endif %}
</div>
{% endblock %}

{% block pagina_css %}
{{ parent() }}
<link href="{{ asset('vendor/bootstrap-datepicker/css/bootstrap-datepicker3.min.css') }}" rel="stylesheet">
{% endblock %}

{% block pagina_js_fine %}
{{ parent() }}
<script src="{{ asset('vendor/bootstrap-datepicker/js/bootstrap-datepicker.min.js') }}"></script>
<script src="{{ asset('vendor/bootstrap-datepicker/locales/bootstrap-datepicker.it.min.js') }}"></script>
<script>
$(document).ready(function() {
  $('#gs-button-date').datepicker({
    format: "yyyy-mm-dd",
    weekStart: 1,
    maxViewMode: 1,
    daysOfWeekDisabled: "0",
    defaultViewDate: "{{ data }}",
    startDate: "{{ app.session.get('/CONFIG/SCUOLA/anno_inizio') }}",
    endDate: "{{ app.session.get('/CONFIG/SCUOLA/anno_fine') }}",
    datesDisabled: {{ lista_festivi|raw }},
    todayBtn: "linked",
    todayHighlight: true,
    autoclose: true,
    language: "it",
    zIndexOffset: 1200
    });
  $('#gs-button-date').datepicker()
    .on('show', function(ev){
      $('#gs-button-date').datepicker('update', '{{ data }}');
  });
  $('#gs-button-date').datepicker()
    .on('changeDate', function(ev){
      $('#gs-button-date').datepicker('hide');
      url = "{{ path('lezioni_assenze_quadro', {'cattedra': (cattedra ? cattedra.id : 0), 'classe': (classe ? classe.id : 0), 'data': '9999-99-99', 'vista': 'G'}) }}";
      url = url.replace("9999-99-99", ev.format());
      window.location.href = url;
  });
  $('[data-toggle="popover"]').popover();
});
</script>
{% endblock %}

