{% extends 'coordinatore/index.html.twig' %}

{% block pagina_contenuto %}
<div class="container-fluid">
  {% include 'ruolo_docente/menu_coordinatore.html.twig' %}
  {% if not classe %}
  <div class="alert alert-warning gs-mt-4" role="alert">
    <strong class="gs-big">{{ 'message.classe_mancante'|trans }}</strong>
  </div>
  {% else %}
  <h1 class="text-center gs-h1 gs-mt-2 gs-mb-0">{{ 'title.coordinatore_valutazione_intermedia'|trans }} {{ classe.anno }}Âª {{ classe.sezione }}</h1>
  <h2 class="text-center gs-h2 gs-mt-0 gs-mb-3">Passo 1: voto di condotta</h2>
    {% for messaggio in app.flashes('errore') %}
      {% if loop.first %}
  <div class="alert alert-danger gs-mb-3" role="alert">
      {% endif %}
    <strong>{{ messaggio|trans }}</strong><br>
      {% if loop.last %}
  </div>
      {% endif %}
    {% endfor %}
    {{ form_start(form) }}
  <table class="table table-bordered table-hover table-striped">
    <thead class="bg-success">
      <tr>
        <th class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2"><small>Alunno</small></th>
    {% for materia,m in dati.materie %}
        <th class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2">
      {% if m.tipo == 'C' %}
          <button type="button" class="btn btn-xs btn-primary" title="Inserisci le valutazioni per la condotta" data-toggle="modal" data-target="#gs-modal-remote" data-href="{{ path('coordinatore_scrutinio_condotta_giudizio', {'classe': classe.id, 'periodo': '1'}) }}"><span class="glyphicon glyphicon-edit"></span></button>
          <br>
      {% endif %}
          <small><span data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="{{ m.nome }}">{{ m.nomeBreve }}</span></small>
        </th>
    {% endfor %}
      </tr>
    </thead>
    <tbody>
    {% for alunno,a in dati.alunni %}
      <tr>
        <td class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2">
          <strong>{{ a.cognome }} {{ a.nome }}</strong><br><small>({{ a.dataNascita|date('d/m/Y') }})</small>
      {% if a.bes != 'N' %}
          <button type="button" class="btn btn-xs btn-default gs-ml-1" title="Informazioni sull'alunno" data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="{{ ('label.bes_'~a.bes)|trans }}"><span class="glyphicon glyphicon-info-sign"></span></button>
      {% endif %}
      {% if a.note is not empty %}
          <button type="button" class="btn btn-xs btn-default gs-ml-1" title="Note aggiuntive" data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="{{ a.note }}"><span class="glyphicon glyphicon-info-sign"></span></button>
      {% endif %}
        </td>
      {% for materia,m in dati.materie %}
        <td class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2">
        {% if m.tipo == 'C' %}
          {% if dati.voti[alunno][materia].unico is not defined %}
          <span>--</span>
          {% else %}
          <span class="label label-{{ dati.voti[alunno][materia].unico < 42 ? 'danger' : (dati.voti[alunno][materia].unico < 43 ? 'warning' : 'success') }}">{{ info.condotta['1'][dati.voti[alunno][materia].unico] }}</span>
          {% endif %}
        {% else %}
          {% if m.tipo == 'R' and a.religione != 'S' %}
            <span>NA</span>
          {% elseif dati.voti[alunno][materia].unico is not defined %}
            <span>--</span>
          {% else %}
            <span class="label label-{{ dati.voti[alunno][materia].unico < 33 ? 'danger' : (dati.voti[alunno][materia].unico < 34 ? 'warning' : 'success') }}">{{ info.giudizi['1'][dati.voti[alunno][materia].unico] }}</span>
          {% endif %}
        {% endif %}
        {% if m.tipo == 'N' and dati.debiti[alunno][materia] is defined %}
          <br>
          {% if dati.voti[alunno][materia].recupero is not defined or dati.voti[alunno][materia].recupero is empty %}
          <span>--</span>
          {% else %}
          <small>{{ ('label.recupero_'~dati.voti[alunno][materia].recupero)|trans }}</small>
          {% endif %}
        {% endif %}
        </td>
      {% endfor %}
      </tr>
    {% endfor %}
    </tbody>
  </table>
  <div class="row gs-mt-5 gs-mb-5">
    <div class="col-sm-6">
    {% if is_granted('ROLE_STAFF') %}
      <a class="btn btn-primary" href="{{ path('coordinatore_scrutinio', {'classe': classe.id, 'stato': 'N'}) }}" role="button" title="Annulla e torna al passo precedente"><span class="glyphicon glyphicon-backward gs-mr-2"></span><strong>Torna al passo precedente</strong></a>
    {% endif %}
    </div>
    <div class="text-right col-sm-6">
      <button class="btn btn-primary" role="button" title="Vai al passo successivo"><span class="glyphicon glyphicon-forward gs-mr-2"></span><strong>Conferma e vai avanti</strong></button>
    </div>
  </div>
    {{ form_end(form) }}
    {% include 'include/modal-remote.html.twig' %}
  {% endif %}
</div>
{% endblock %}

{% block pagina_css %}
{{ parent() }}
<link href="{{ asset('vendor/bootstrap-slider/css/bootstrap-slider.min.css') }}" rel="stylesheet">
{% endblock %}

{% block pagina_js_fine %}
{{ parent() }}
<script src="{{ asset('vendor/bootstrap-slider/js/bootstrap-slider.min.js') }}"></script>
<script>
$(document).ready(function() {
  $('[data-toggle="popover"]').popover();
  $('#gs-modal-remote').on('show.bs.modal', function (event) {
    var url = $(event.relatedTarget).data('href');
    $(this).find('#gs-modal-remote-content').load(url);
  });
});
</script>
{% endblock %}
