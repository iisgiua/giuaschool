{% extends 'coordinatore/index.html.twig' %}

{% block pagina_contenuto %}
<div class="container-fluid">
  {% if not classe %}
  <div class="alert alert-warning gs-mt-4" role="alert">
    <strong class="gs-big">{{ 'message.classe_mancante'|trans }}</strong>
  </div>
  {% else %}
  <h1 class="text-center gs-h1 gs-mt-2 gs-mb-0">{{ 'title.coordinatore_scrutinio'|trans }} {{ classe.anno }}Âª {{ classe.sezione }}</h1>
    {% include 'include/modal-error.html.twig' %}
    {{ form_start(form) }}
    {% if classe.anno < 5 %}
  <h2 class="text-center gs-h2 gs-mt-0 gs-mb-3">Passo 5: <em>Piano di Apprendimento Individualizzato</em> e <em>Piano di Integrazione degli Apprendimenti</em></h2>
  <h3 class="text-center text-info gs-h3 gs-mt-0 gs-mb-1"><em>Clicca sul pulsante di predisposizione per inserire o modificare i piani.</em></h2>
  <div id="gs-fixed-header">
    <table class="table table-bordered table-hover table-striped">
      <caption class="text-success text-center gs-big gs-pb-0 gs-mt-4"><strong>Piano di Apprendimento Individualizzato</strong></caption>
      <thead class="bg-success">
        <tr>
          <th class="col-sm-4 gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2"><small>Alunno</small></th>
          <th class="col-sm-4 gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2">
            <small><span data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="Materie con voti insufficienti">Materie</span></small>
          </th>
          <th class="col-sm-4 gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2">
            <small><span data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="Pian">Predisposizione piano</span></small>
          </th>
        </tr>
      </thead>
      <tbody>
      {% for alunno,a in dati.alunni %}
        <tr>
          <td class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2">
            <strong>{{ a.cognome }} {{ a.nome }}</strong><br><small>({{ a.dataNascita|date('d/m/Y') }})</small>
        {% if a.bes != 'N' %}
            <button type="button" class="btn btn-xs btn-default gs-ml-1" title="Informazioni sull'alunno" data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="{{ ('label.bes_'~a.bes)|trans }}"><span class="glyphicon glyphicon-info-sign"></span></button>
        {% endif %}
          </td>
          <td>
        {% for materia,m in dati.voti[alunno] %}
            <strong>{{ dati.materie[materia]['nomeBreve'] }}{{ not loop.last ? ', '}}</strong>
        {% endfor %}
          </td>
          <td>
        {% if dati.stato.PAI[alunno] == 1 %}
            <button type="button" class="btn btn-danger gs-button-remote" title="Compila il piano" data-toggle="modal" data-target="#gs-modal-remote" data-href="{{ path('coordinatore_scrutinio_PAI', {'classe': classe.id, 'alunno': alunno}) }}"><strong>DA COMPLETARE</strong></button>
        {% elseif dati.stato.PAI[alunno] == 0 %}
            <button type="button" class="btn btn-warning gs-button-remote" title="Controlla il piano" data-toggle="modal" data-target="#gs-modal-remote" data-href="{{ path('coordinatore_scrutinio_PAI', {'classe': classe.id, 'alunno': alunno}) }}"><strong>DA CONTROLLARE</strong></button>
        {% else %}
            <button type="button" class="btn btn-success gs-button-remote" title="Modifica il piano" data-toggle="modal" data-target="#gs-modal-remote" data-href="{{ path('coordinatore_scrutinio_PAI', {'classe': classe.id, 'alunno': alunno}) }}"><strong>COMPILATO</strong></button>
        {% endif %}
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
  <div class="text-success text-center gs-big gs-pb-0 gs-mt-5"><strong>Piano di Integrazione degli Apprendimenti</strong></div>
  <div class="alert alert-info text-center gs-big gs-mt-1">
    <strong class="gs-mr-3">Predisposizione piano:</strong>
      {% if dati.stato.PIA == 1 %}
    <button type="button" class="btn btn-danger gs-button-remote" title="Compila il piano" data-toggle="modal" data-target="#gs-modal-remote" data-href="{{ path('coordinatore_scrutinio_PIA', {'classe': classe.id}) }}"><strong>DA COMPLETARE</strong></button>
      {% elseif dati.stato.PIA == 0 %}
    <button type="button" class="btn btn-warning gs-button-remote" title="Controlla il piano" data-toggle="modal" data-target="#gs-modal-remote" data-href="{{ path('coordinatore_scrutinio_PIA', {'classe': classe.id}) }}"><strong>DA CONTROLLARE</strong></button>
      {% else %}
    <button type="button" class="btn btn-success gs-button-remote" title="Modifica il piano" data-toggle="modal" data-target="#gs-modal-remote" data-href="{{ path('coordinatore_scrutinio_PIA', {'classe': classe.id}) }}"><strong>COMPILATO</strong></button>
      {% endif %}
  </div>
    {% else %}
  <h2 class="text-center gs-h2 gs-mt-0 gs-mb-3">Passo 5: conversione dei crediti</h2>
  <div id="gs-fixed-header">
    <table class="table table-bordered table-hover table-striped">
      <thead class="bg-success">
        <tr>
          <th class="col-sm-4 gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2"><small>Alunno</small></th>
          <th class="col-sm-2 gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2" colspan="2">
            <small><span data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="Credito classe terza">Classe Terza</span></small>
          </th>
          <th class="col-sm-2 gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2" colspan="2">
            <small><span data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="Credito classe quarta">Classe Quarta</span></small>
          </th>
          <th class="col-sm-2 gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2">
            <small><span data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="Credito classe quinta">Classe Quinta</span></small>
          </th>
          <th class="col-sm-2 gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2">
            <small><span data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="Credito complessivo del triennio">Credito Totale</span></small>
          </th>
        </tr>
      </thead>
      <tbody>
      {% for alunno,a in dati.alunni %}
        <tr>
          <td class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2">
            <strong>{{ a.cognome }} {{ a.nome }}</strong><br><small>({{ a.dataNascita|date('d/m/Y') }})</small>
        {% if a.bes != 'N' %}
            <button type="button" class="btn btn-xs btn-default gs-ml-1" title="Informazioni sull'alunno" data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="{{ ('label.bes_'~a.bes)|trans }}"><span class="glyphicon glyphicon-info-sign"></span></button>
        {% endif %}
          </td>
          <td class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2"><span class="label label-default">{{ a.credito3 }}</span></td>
          <td class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2"><span class="label label-primary">{{ dati.esiti[alunno].dati.creditoConvertito3 }}</span></td>
          <td class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2"><span class="label label-default">{{ a.credito4 }}</span></td>
          <td class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2"><span class="label label-primary">{{ dati.esiti[alunno].dati.creditoConvertito4 }}</span></td>
          <td class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2"><span class="label label-primary">{{ dati.esiti[alunno].credito }}</span></td>
          <td class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2"><span class="label label-primary">{{ dati.esiti[alunno].dati.creditoConvertito3+dati.esiti[alunno].dati.creditoConvertito4+dati.esiti[alunno].credito }}</span></td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
    {% endif %}
  <div class="row gs-mt-5 gs-mb-5">
    <div class="col-sm-6">
      <a class="btn btn-primary gs-wait-page" href="{{ path('coordinatore_scrutinio', {'classe': classe.id, 'stato': '5'}) }}" role="button" title="Annulla e torna al passo precedente"><span class="glyphicon glyphicon-backward gs-mr-2"></span><strong>Torna al passo precedente</strong></a>
    </div>
    <div class="text-right col-sm-6">
      <button class="btn btn-primary" title="Vai al passo successivo" data-toggle="modal" data-target="#gs-modal-waiting"><span class="glyphicon glyphicon-forward gs-mr-2"></span><strong>Conferma e vai avanti</strong></button>
    </div>
  </div>
    {{ form_end(form) }}
    {% include 'include/modal-remote.html.twig' %}
    {% include 'include/modal-waiting.html.twig' %}
  {% endif %}
</div>
{% endblock %}

{% block pagina_js_fine %}
{{ parent() }}
<script src="{{ asset('vendor/floatThead/jquery.floatThead.min.js') }}"></script>
<script>
$(document).ready(function() {
  $('[data-toggle="popover"]').popover({container: 'body'});
  $('#gs-modal-remote').on('show.bs.modal', function (event) {
    var url = $(event.relatedTarget).data('href')+'/'+Math.floor($('html').scrollTop());
    $(this).find('#gs-modal-remote-content').load(url);
  });
  $(".gs-button-remote").click(function(e) {
    e.preventDefault();
    $('#gs-modal-remote-content').html('<div class="modal-content"><div class="modal-header"><h3 class="modal-title">Attendere prego...</h3></div><div class="modal-body"><div class="progress"><div class="progress-bar progress-bar-info progress-bar-striped active" style="width: 100%"></div></div></div></div>');
  });
  $('#gs-modal-waiting').on('shown.bs.modal', function (event) {
    $('form[name="scrutinio"]').submit();
  });
  $('a.gs-wait-page').click(function (event) {
    $('#gs-modal-waiting').modal('show');
    return true;
  });
  $('#gs-fixed-header table').on("floatThead", function(e, isFloated, floatContainer) {
    var c=floatContainer.find('thead');
    if(isFloated){
      c.hide();
      c.removeClass("bg-success").addClass("bg-info");
      c.fadeIn();
    } else {
      c.removeClass("bg-info").addClass("bg-success");
    }
  });
  // init
  $('#gs-fixed-header table').floatThead({top: 60});
  {% if posizione > 0 %}
  $('html').scrollTop({{ posizione }});
  {% endif %}
  {% for messaggio in app.flashes('errore') %}
    {% if loop.first %}
  var m = '';
    {% endif %}
  m = m + "{{ messaggio|raw }}<br>";
    {% if loop.last %}
  $('#gs-modal-error-text').html(m);
  $('#gs-modal-error').modal('show');
    {% endif %}
  {% endfor %}
});
</script>
{% endblock %}
