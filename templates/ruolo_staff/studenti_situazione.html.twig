{% extends 'ruolo_staff/index.html.twig' %}

{% block pagina_contenuto %}
<div class="container-fluid">
  <h1 class="text-center gs-h2 gs-mt-2">{{ 'title.staff_situazione'|trans }}</h1>
  {% include('include/form-inline.html.twig') %}
  <table class="table table-bordered table-hover table-striped gs-mb-0">
    <thead class="bg-success">
      <tr>
        <th class="col-sm-4">{{ 'label.alunno'|trans }}</th>
        <th class="col-sm-1">{{ 'label.classe'|trans }}</th>
        <th class="col-sm-7">{{ 'label.action'|trans }}</th>
      </tr>
    </thead>
    <tbody>
    {% for u in lista %}
      <tr>
        <td>
          <button type="button" class="btn btn-xs btn-default" title="Dettagli alunno" data-toggle="modal" data-target="#gs-modal-info" data-title="{{ u.alunno.cognome }} {{ u.alunno.nome }} ({{ u.alunno.dataNascita|date('d/m/Y') }})" data-body="alunno-{{ loop.index }}"><span class="glyphicon glyphicon-zoom-in"></span></button>
          <span>{{ u.alunno.cognome }} {{ u.alunno.nome }} ({{ u.alunno.dataNascita|date('d/m/Y') }})</span>
          <div id="alunno-{{ loop.index }}" style="display:none">
            <div class="list-group-item">
              <div class="list-group-item-text">
                <h3 class="gs-h3 text-center gs-mt-1">Autorizzazioni e deroghe</h3>
                <p>Ingresso: {{ u.alunno.autorizzaEntrata ? u.alunno.autorizzaEntrata : 'NESSUNA' }}</p>
                <p>Uscita: {{ u.alunno.autorizzaUscita ? u.alunno.autorizzaUscita : 'NESSUNA' }}</p>
                {% if u.alunno.note %}<p>Note:<br><em>{{ u.alunno.note }}</em></p>{% endif %}
              </div>
            </div>
            <div class="list-group-item">
              <div class="list-group-item-text">
                <h3 class="gs-h3 text-center gs-mt-1">Dati utente</h3>
                <p>Profilo <strong>STUDENTE</strong>: {{ u.alunno.username }} (ultimo accesso: {{ u.alunno.ultimoAccesso ? u.alunno.ultimoAccesso|date('d/m/Y H:i') : 'MAI' }})</p>
                <p>Profilo <strong>GENITORE - {{ u.g1_nome }} {{ u.g1_cognome }}</strong>: {{ u.g1_username }} (ultimo accesso: {{ u.g1_accesso ? u.g1_accesso|date('d/m/Y H:i') : 'MAI' }})</p>
                <p>Profilo <strong>GENITORE - {{ u.g2_nome }} {{ u.g2_cognome }}</strong>: {{ u.g2_username }} (ultimo accesso: {{ u.g2_accesso ? u.g2_accesso|date('d/m/Y H:i') : 'MAI' }})</p>
              </div>
            </div>
            {% if u.alunno.bes != 'N' %}
            <div class="list-group-item">
              <div class="list-group-item-text">
                <h3 class="gs-h3 text-center gs-mt-1">Bisogni Educativi Speciali</h3>
                <p>Tipologia: {{ ('label.bes_'~u.alunno.bes)|trans }}</p>
                {% if u.alunno.noteBes %}<p>Descrizione:<br><em>{{ u.alunno.noteBes|raw }}</em></p>{% endif %}
              </div>
            </div>
            {% endif %}
          </div>
        </td>
        <td>{{ u.alunno.classe.anno }}Âª {{ u.alunno.classe.sezione }}</td>
        <td>
          <a class="btn btn-primary btn-xs gs-mr-2" href="{{ path('coordinatore_situazione_alunno', {'alunno': u.alunno.id, 'tipo': 'V', 'formato': 'H'}) }}" role="button" title="Mostra la situazione dei voti dell'alunno"><strong>Voti</strong></a>
          <a class="btn btn-primary btn-xs gs-mr-2" href="{{ path('coordinatore_situazione_alunno', {'alunno': u.alunno.id, 'tipo': 'S', 'formato': 'H'}) }}" role="button" title="Mostra la situazione degli scrutini dell'alunno"><strong>Scrutini</strong></a>
          <a class="btn btn-primary btn-xs gs-mr-2" href="{{ path('coordinatore_situazione_alunno', {'alunno': u.alunno.id, 'tipo': 'A', 'formato': 'H'}) }}" role="button" title="Mostra la situazione delle assenze dell'alunno"><strong>Assenze</strong></a>
          <a class="btn btn-primary btn-xs gs-mr-2" href="{{ path('coordinatore_situazione_alunno', {'alunno': u.alunno.id, 'tipo': 'N', 'formato': 'H'}) }}" role="button" title="Mostra la situazione delle note dell'alunno"><strong>Note</strong></a>
          <a class="btn btn-primary btn-xs gs-mr-2" href="{{ path('coordinatore_situazione_alunno', {'alunno': u.alunno.id, 'tipo': 'O', 'formato': 'H'}) }}" role="button" title="Mostra la situazione delle osservazioni sull'alunno"><strong>Osservazioni</strong></a>
          <a class="btn btn-primary btn-xs gs-mr-2" href="{{ path('coordinatore_situazione_alunno', {'alunno': u.alunno.id, 'tipo': 'T', 'formato': 'H'}) }}" role="button" title="Mostra la situazione complessiva dell'alunno"><strong>Tutto</strong></a>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
  {% include 'include/modal-info.html.twig' %}
  {% if maxPages > 1 %}
  <nav aria-label="Navigazione tra le pagine" class="text-center">
    <ul class="pagination pagination-sm gs-mt-2">
    {% if page > 1 %}
      <li><a href="{{ path('staff_studenti_situazione', {'pagina': page-1}) }}" title="{{ 'label.precedente'|trans }}"><span aria-hidden="true">&laquo;</span></a></li>
    {% else %}
      <li class="disabled"><span title="{{ 'label.precedente'|trans }}"><span aria-hidden="true">&laquo;</span></span></li>
    {% endif %}
    {% for i in 1..maxPages %}
      <li {{ page == i ? 'class="active"' }}><a href="{{ path('staff_studenti_situazione', {'pagina': i}) }}">{{ i }}</a></li>
    {% endfor %}
    {% if page < maxPages %}
      <li><a href="{{ path('staff_studenti_situazione', {'pagina': page+1}) }}" title="{{ 'label.successiva'|trans }}"><span aria-hidden="true">&raquo;</span></a></li>
    {% else %}
      <li class="disabled"><span title="{{ 'label.successiva'|trans }}"><span aria-hidden="true">&raquo;</span></span></li>
    {% endif %}
    </ul>
  </nav>
  {% endif %}
</div>
{% endblock %}

{% block pagina_js_fine %}
{{ parent() }}
<script>
$(document).ready(function() {
  $('#gs-modal-info').on('show.bs.modal', function (event) {
    var title = $(event.relatedTarget).data('title');
    var id = $(event.relatedTarget).data('body');
    var html = $('#'+id).html();
    $(this).find('#gs-modal-info-label').text(title);
    $(this).find('#gs-modal-info-body').html(html);
  });
});
</script>
{% endblock %}
