{% extends 'lezioni/index.html.twig' %}

{% block pagina_contenuto %}
<div class="container-fluid">
  <div class="panel panel-primary gs-mt-4" >
    <div class="panel-heading">
      <div class="panel-title">{{ form_title|trans }}</div>
    </div>
    <div class="panel-body gs-pt-0">
      <div class="help-block gs-big gs-text-normal">
        <em>Scegli le opzioni di configurazione e clicca sul pulsante CONFERMA.</em>
      </div>
      {{ form_start(form) }}
      {{ form_errors(form) }}
      <div class="form-group">
        <label class="col-sm-6 control-label required">{{ form.compatta.vars.label|trans }}</label>
        <div class="col-sm-6">{{ form_widget(form.compatta) }}</div>
      </div>
      <div class="form-group">
        <label class="col-sm-6 control-label required">{{ form.medie_tipi.vars.label|trans }}</label>
        <div class="col-sm-6">{{ form_widget(form.medie_tipi) }}</div>
      </div>
      <div class="form-group">
        <label class="col-sm-6 control-label required">{{ form.scritto.vars.label|trans }}</label>
        <div class="col-sm-6">{{ form_widget(form.scritto) }}</div>
      </div>
      <div class="form-group">
        <label class="col-sm-6 control-label required">{{ form.orale.vars.label|trans }}</label>
        <div class="col-sm-6">{{ form_widget(form.orale) }}</div>
      </div>
      <div class="form-group">
        <label class="col-sm-6 control-label required">{{ form.pratico.vars.label|trans }}</label>
        <div class="col-sm-6">{{ form_widget(form.pratico) }}</div>
      </div>
      <div class="form-group">
        <div class="col text-center">
          {{ form_widget(form.submit) }}
          {{ form_widget(form.cancel) }}
        </div>
      </div>
      {{ form_end(form) }}
    </div>
  </div>
</div>
{% endblock %}
